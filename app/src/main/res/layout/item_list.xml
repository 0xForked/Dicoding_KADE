<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/one_hundred_thirty_dp"
    android:layout_margin="3dp">
    <RelativeLayout
        style="@style/Layout.Click"
        android:id="@+id/lay_vertical_click">
        <ImageView
            style="@style/Image.List"
            android:id="@+id/img_item"
            android:contentDescription="@null" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_item_title"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed"
            android:layout_marginTop="@dimen/five_dp"
            android:layout_marginStart="@dimen/ten_dp"
            android:layout_toEndOf="@+id/img_item" />

        <RelativeLayout
            style="@style/WrapContent"
            android:layout_marginStart="@dimen/ten_dp"
            android:layout_marginBottom="@dimen/ten_dp"
            android:layout_toEndOf="@+id/img_item"
            android:layout_alignParentBottom="true">
            <TextView
                style="@style/Text.Card.Subtitle"
                android:id="@+id/txt_item_subtitle"
                android:text="@string/item_source" />
            <TextView
                android:layout_below="@id/txt_item_subtitle"
                style="@style/Text.Card.Subtitle"
                android:id="@+id/txt_item_published"
                android:hint="@string/item_published" />
        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>